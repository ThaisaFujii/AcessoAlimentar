<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".LocalFarmerEditActivity">

    <ImageView
        android:id="@+id/localFarmerNavigation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitStart"
        android:src="@drawable/baseline_navigate_before_24"
        app:tint="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/localFarmerTitle"
        style="@style/Title"
        android:layout_width="356dp"
        android:layout_height="30dp"
        android:text="@string/home_subtitle"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/localFarmerNavigation"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="27dp" />

    <TextView
        android:id="@+id/address"
        style="@style/Title"
        android:layout_width="356dp"
        android:layout_height="30dp"
        android:text="Itupeva - SP"
        app:layout_constraintTop_toBottomOf="@+id/localFarmerTitle"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="27dp" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="280dp"
        android:layout_height="23dp"
        android:layout_marginTop="124dp"
        android:orientation="horizontal"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="@+id/address"
        app:layout_constraintStart_toStartOf="@+id/address"
        app:layout_constraintTop_toBottomOf="@+id/address"
        tools:ignore="MissingConstraints">

        <TextView
            style="@style/CriarConta"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="Cultivo"
            tools:ignore="missing constraints" />

        <TextView
            style="@style/CriarConta"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Quantidade estoque"
            tools:ignore="missing constraints" />

        <TextView
            style="@style/CriarConta"
            android:layout_width="97dp"
            android:layout_height="20dp"
            android:text="Doação"
            tools:ignore="missing constraints" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="200dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.338"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView4"
            style="@style/CriarConta"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="Leite" />

        <TextView
            android:id="@+id/textView8"
            style="@style/CriarConta"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginEnd="28dp"
            android:text="5000L" />

        <TextView
            android:id="@+id/textView5"
            style="@style/CriarConta"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginEnd="72dp"
            android:text="2000L" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/baseline_restore_from_trash_24"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.0"
        app:tint="@color/white"
        tools:ignore="MissingConstraints"></ImageView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginTop="68dp"
        android:text="Meio de contato:"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        tools:layout_editor_absoluteX="7dp"
        android:layout_marginLeft="5dp"
        tools:ignore="MissingConstraints">
    </TextView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:text="(11) 4593 - 7400"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

    </TextView>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="64dp"
        android:text="Ir para Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

</androidx.constraintlayout.widget.ConstraintLayout>