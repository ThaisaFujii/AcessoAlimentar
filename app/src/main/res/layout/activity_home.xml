<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textView3"
        style="@style/Title"
        android:layout_width="356dp"
        android:layout_height="30dp"
        android:layout_marginTop="36dp"
        android:text="@string/textView3"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_subtitle"
        style="@style/Title"
        android:layout_width="356dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:text="@string/home_subtitle"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/homeProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitStart"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:tint="@color/white"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/home_question"
        style="@style/Home_question"
        android:layout_width="395dp"
        android:layout_height="26dp"
        android:layout_marginTop="68dp"
        android:text="Em qual desses grupos vocÃª se encaixa?"
        app:layout_constraintTop_toBottomOf="@+id/home_subtitle"
        tools:layout_editor_absoluteX="3dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="414dp"
        android:layout_height="469dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/home_question"
        app:layout_constraintHorizontal_bias="0.315"
        app:layout_constraintStart_toStartOf="@+id/home_question"
        app:layout_constraintTop_toBottomOf="@+id/home_question"
        app:layout_constraintVertical_bias="0.121">

        <TextView
            android:id="@+id/agricultorLocal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            style="@style/CriarConta"
            android:background="@color/white"
            android:hint="AGRICULTORES LOCAIS"
            android:padding="15dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            style="@style/CriarConta"
            android:background="@color/white"
            android:hint="COOPERATIVAS AGRICOLAS"
            android:padding="15dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            style="@style/CriarConta"
            android:background="@color/white"
            android:hint="TRANSPORTADORES"
            android:padding="15dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            style="@style/CriarConta"
            android:background="@color/white"
            android:hint="ONG's"
            android:padding="15dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            style="@style/CriarConta"
            android:background="@color/white"
            android:hint="CONSUMIDOR"
            android:padding="15dp"
            android:textAlignment="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>